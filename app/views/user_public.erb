
  <h2>Blogs 'n Stuff</h2>

  <h4><%= @user.username %>'s Blog Posts</h4>

  <h3>Post History:<h3>
  <table border="1">
    <tr> <th>Title</th><th>Created On</th></tr>
    <% @user.posts.each do |post|%>
    <tr><td><a href='/posts/<%= post.id %>'><%= post.title %></a></td> <td><%= post.created_at %></td></tr>
  <% end %>
</table>
  
